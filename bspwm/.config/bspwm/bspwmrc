#! /bin/sh

# Screen Padding
bspc config top_padding 36
bspc config left_padding 12
bspc config right_padding 12
bspc config bottom_padding 40

bspc config border_width 0
bspc config window_gap 16
bspc config split_ratio 0.50
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config focus_by_distance true
bspc config adaptive_raise true
bspc config auto_cancel true

bspc monitor VGA-1 -d 1 2 3
bspc monitor DVI-I-1 -d 4 5 6
bspc rule -a Firefox desktop=^4
bspc rule -a mupdf window=pseudo_tiled
bspc rule -a Gimp desktop=^3 follow=on floating=on

compton --config ~/.config/compton/compton.conf &
sleep 2
panel &

